  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SudokuSolver.ViewModel\SudokuSolver.ViewModel.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>